{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord
{% endblock %}

{% block body %}
	<div class="container-fluid">

		<div class="row">
			<div class="col">
				<div class="card bg-info text-white my-3 text-center">
					<div class="card-body">
						<div class="row">
							<div class="col-4">
								<i class="fas fa-users fa-3x"></i>
							</div>
							<div class="col-12">
								<h4 class="card-title">{{ stats.users }}
									utilisateurs</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="card bg-success text-white my-3 text-center">
					<div class="card-body">
						<div class="row">
							<div class="col-4">
								<i class="fas fa-hotel fa-3x"></i>
							</div>
							<div class="col-12">
								<h4 class="card-title">{{ stats.ads }}
									annonces
								</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="card bg-warning text-white my-3 text-center">
					<div class="card-body">
						<div class="row">
							<div class="col-4">
								<i class="fas fa-folder fa-3x"></i>
							</div>
							<div class="col-12">
								<h4 class="card-title">{{ stats.bookings }}
									réservations</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="card bg-purple text-white my-3 text-center">
					<div class="card-body">
						<div class="row">
							<div class="col-4">
								<i class="fas fa-comment fa-3x"></i>
							</div>
							<div class="col-12">
								<h4 class="card-title">{{ stats.comments }}
									avis</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<hr>
		<div class="row">
			<div class="col">
				<div class="alert alert-success-light text-white">
					<h2 class="alert-heading my-3"><i class="fas fa-arrow-up"></i>  Les annonces populaires</h2>

					<table class="table table-hover text-white">
						<thead>
							<tr>
								<th>Annonce</th>
								<th>Propriétaire</th>
								<th>Moyenne</th>
							</tr>
						</thead>

						<tbody>
							{% for ad in bestAds %}
								<tr>
									<td class="text-white">{{ ad.title }}</td>
									<td class="text-white"><img src="{{ ad.pictures }} " alt="" class="avatar avatar-mini"> {{ad.firstName}}
										{{ad.lastName}}</td>
									<td class="text-center text-white">
										<span class="badge badge-dark">{{ad.note | number_format(1, ",", " ")}}
										</span>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
            <div class="col">
				<div class="alert alert-danger-light text-white">
					<h2 class="alert-heading my-3"><i class="fas fa-arrow-down"></i>  Les pires annonces </h2>

					<table class="table table-hover text-white">
						<thead>
							<tr>
								<th>Annonce</th>
								<th>Propriétaire</th>
								<th>Moyenne</th>
							</tr>
						</thead>

						<tbody>
							{% for ad in worstAds %}
								<tr>
									<td class="text-white">{{ ad.title }}</td>
									<td class="text-white"><img src="{{ ad.pictures }} " alt="" class="avatar avatar-mini"> {{ad.firstName}}
										{{ad.lastName}}</td>
									<td class="text-center text-white">
										<span class="badge badge-dark">{{ad.note | number_format(1, ",", " ")}}
										</span>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
