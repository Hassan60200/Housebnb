{% extends 'base.html.twig' %}

{% block title %}
    Création d'une annonce
{% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container text-primary">
        <h1 class="text-center my-5">Créer une nouvelle annonce</h1>

        {{ form_start(form) }}

        {{ form_widget(form) }}

        <button class="btn btn-info">Créer la nouvelle annonce</button>

        {{ form_end(form) }}
    </div>
{% endblock %}

{% block _ad_images_widget %}
    <p class="text-danger">Ici, vous pouvez ajouter vos propres images !</p>
    {{ form_widget(form) }}
    <div class="form-group">
        <button type="button" id="add-images" class="btn btn-warning">Ajouter une nouvelle image</button>
    </div>
{% endblock %}

{% block _ad_images_entry_row %}

    {{ form_widget(form) }}

{% endblock %}

{% block _ad_images_entry_widget %}
    <div class="form-group" id="block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.url) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.caption) }}
                    </div>
                </div>
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-danger" data-action="delete" data-target="#block_{{id}}">X</button>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $('#add-images').click(function () { // Je récupère les numéros des futurs champs que je vais créer
            const index = $('#add_images div.form-group').length;

            // Je récupère le prototype des entrées
            const tmpl = $('#ad_images').data('prototype').replace(/__name__/g, index);

            // J'injecte ce code au sein de la div
            $('#ad_images').append(tmpl);

            //Je gère le bouton supprimer
            handleDeleteButtons();
        });

        function handleDeleteButtons(){
            $('button[data-action="delete"]').click(function(){
                const target = this.dataset.target;
                $(target).remove()
            });
        }

        handleDeleteButtons();
    </script>
{% endblock %}
