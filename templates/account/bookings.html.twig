{% extends "base.html.twig" %}

{% block title %}Liste des réservations
{% endblock %}

{% block body %}
	<div class="container text-center text-primary">

		<div class="alert alert-dismissible alert-primary my-5">

			<h1>Mes réservations</h1>

		</div>

		{% for booking in app.user.bookings %}
			{% set ad = booking.ad %}


			<div class="row mt-3 border border-dark py-3">
				<div class="col-4">
					<img src="{{ ad.coverImage }}" alt="photo de l'annonce {{ ad.title }}" class="img-fluid">
					<div class="mt-3">
						{% set comment = ad.commentFromAuthor(app.user) %}
						{% if comment is not null %}
							<strong>Note donnée:</strong>
							{% include "partials/rating.html.twig" with {'rating': comment.rating} %}
							{% else %}
							Vous n'avez pas encore donnée de note. 
							<a href="{{ path('booking_show', {'id': booking.id}) }}#comment" class="text-info">Je donne mon avis !!</a>
						{% endif %}

					</div>
				</div>
				<div class="col-8">
					<h4>{{ ad.title}}</h4>
					<p>Réservation
						<strong>n°{{booking.id}}</strong><br>
						Du
						{{ booking.startDate | date('d/m/Y')}}
						au
						{{ booking.endDate | date('d/m/Y')}}
						({{ booking.amount}}
						&euro;)
					</p>
					<a href="{{ path('booking_show', {'id': booking.id}) }}" class="btn btn-warning">Plus d'info</a>
				</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}
